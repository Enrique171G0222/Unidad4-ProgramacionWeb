@model Actividad2_ActividadDocentes.Models.Profesor
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<h3>Agregar Profesor</h3>
<form method="post" action="~/Home/AgregarProfesores">
    <label>Clave del profesor</label>
    <input type="number" asp-for="Clave" required /> <br />
    <label>Nombre del profesor</label>
    <input type="text" asp-for="Nombre" required /> <br />
    <label>Contraseña</label>
    <input type="password" asp-for="Contrasena" required /> <br />
    <input type="submit" value="Agregar Profesor" />
</form>
<p>
    @Html.ValidationSummary()
</p>