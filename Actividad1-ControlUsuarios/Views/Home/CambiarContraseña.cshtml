@model Actividad1_ControlUsuarios.Models.Usuario
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers*@

@{
    Layout = "_Layout";
}

<h3>Cambiar Contraseña</h3>

<form method="post" action="~/Home/CambiarContraseña" onsubmit="submit()">
    <input type="text" name="correo" style="visibility:hidden" value="@User.Claims.FirstOrDefault(x => x.Type == "Correo electronico").Value" /> <br />
    <label>Contraseña nueva:</label>
    <input type="password" name="contraseña1" required /><br />
    <label>Confirma tu nueva contraseña:</label>
    <input type="password" required name="contraseña2" /><br />
    @Html.ValidationSummary()
    <input type="submit" value="Cambiar Contraseña" />
</form>

<script>
    function submit() {
        alert('La contraseña a sido modificada con exito');
    }
</script>